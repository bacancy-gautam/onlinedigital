<% @page_title = "Address"%>
<%= render partial:"layouts/sidebar" %>
<table class="table">
  <thead class="thead">
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Pincode</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.address1%></td>
    <td><%= address.address2%></td>
    <td><%= CS.countries[address.country.to_sym] %></td>
    <td><%= CS.states(address.country.to_sym)[address.state.to_sym] %></td>
    <td><%= address.city%></td>
    <td><%= address.pincode%></td>
    <td>
        <%= link_to "Show", resume_address_path(:id => address.id), class: "btn btn-primary" %>
    </td>
    <td>
        <%= link_to "Edit", edit_resume_address_path(:id => address.id), class: "btn btn-primary" %>
    </td>
    <td>
        <%= link_to "Delete", resume_address_path(:id => address.id), method: :delete, data: {confirm:"Are you sure?"}, class: "btn btn-danger"%>
    </td>
    <% end %>
  </tr>
</table>

<% if @addresses.empty? %>
<div class="btn btn-info">
  <%= link_to "create new ", new_resume_address_path, :class => "btn" %>
</div>
<% end %>