<div><span class="fa fa-arrow-left"></span>
  <%= link_to "back", :back %>
</div>
<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
      <%= form_with(model: [@resume, @address],class: "form-group", validate: true) do |f|%>
      <%= hidden_field_tag :resume_id, params[:resume_id] %>

      <% if @address.errors.any? %>
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :address1 %><br />
        <%= f.text_field :address1, autofocus: true, autocomplete: "address1" %>
      </div>

      <div class="form-group">
        <%= f.label :address2 %><br />
        <%= f.text_field :address2, autofocus: true, autocomplete: "address2", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :county %><br />
        <%= f.select :country,  options_for_select(CS.countries.map { |c| [c[1], c[0]] }, @address.country )  %>
      </div>

      <div class="form-group">
        <%= f.label :state %><br />
        <%= f.select :state, options_for_select(CS.states(@address.country),@address.state), class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :city %><br />
        <%= f.select :city, options_for_select(CS.cities(@address.state),@address.city), class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :pincode %><br />
        <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode", class: "form-control"%>
      </div>
      <br>
      <div class="form-group">
        <%=f.submit :class => "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>