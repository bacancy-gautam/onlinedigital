<div class='nested-fields'>
  <div class="field">
    <%= f.label :address1 %>
    <%= f.text_field :address1, autofocus:true, autocomplete: "address1" %>
  </div>

  <div class="field">
    <%= f.label :address2 %>
    <%= f.text_field :address2, autofocus:true, autocomplete: "address2" %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, autofocus:true, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, autofocus:true, autocomplete: "state" %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country, autofocus:true, autocomplete: "country" %>
  </div>

  <div class="field">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, autofocus:true, autocomplete: "pincode" %>
  </div>
  <%= link_to_remove_association "remove address", f %>
</div>