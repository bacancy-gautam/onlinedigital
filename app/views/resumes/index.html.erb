<table class="table">
<% if current_user.has_role? :admin %>
<% else %>
<div class="btn btn-info">
  <%= link_to "create new ", new_resume_path, :class => "btn" %>
</div>
<% end %>
  <thead class = "thead-dark">
    <th>NO</th>
    <th>Username</th>
    <th>Remove</th>
  </thead>
<br />
<% @resumes.each do |resume| %>
<tr>
  <td><%= resume.id%></td>
